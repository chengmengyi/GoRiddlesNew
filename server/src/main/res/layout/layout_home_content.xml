<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:src="@drawable/icon_set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="25dp"-->
<!--     />-->
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VPN"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        app:layout_constraintBottom_toBottomOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_choose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_choose_server"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:text="00:00:00"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/connect_text_color_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_status_image"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/connect_status_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_status_text"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn_bg"
        android:layout_width="88dp"
        android:layout_height="208dp"
        android:src="@drawable/home4"
        android:scaleType="fitXY"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_connect_status_image" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="88dp"
        android:layout_height="117dp"
        android:src="@drawable/home5"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn_bg"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn_bg"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_guide"
        android:layout_width="136dp"
        android:layout_height="270dp"
        android:src="@drawable/guide"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn_bg"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn_bg"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg222"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_connect_btn_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_choose_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home1"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="@id/iv_choose_server"
            app:layout_constraintRight_toRightOf="@id/iv_choose_server"
            app:layout_constraintTop_toTopOf="@id/iv_choose_server"
            app:layout_constraintBottom_toBottomOf="@id/iv_choose_server">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fast"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Faster server"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
<!--        <include-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="160dp"-->
<!--            layout="@layout/native_home"-->
<!--            android:layout_margin="20dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/iv_choose_server"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="160dp"
        layout="@layout/native_home"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/llc_bottom"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_riddles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/home_uns"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riddies"
                android:textSize="12sp"
                android:textColor="@color/color_6d6d6d"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/server_sel"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VPN"
                android:textSize="12sp"
                android:textColor="@color/color_24f4ac"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>